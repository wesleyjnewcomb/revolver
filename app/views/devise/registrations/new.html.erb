<div class="row">
  <div class="small-6 columns small-centered">
    <h2>Create an account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <!-- <%= f.label :username %><br /> -->
      <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
    </div>

    <div class="field">
      <!-- <%= f.label :email %><br /> -->
      <%= f.email_field :email, autofocus: false, placeholder: 'Email' %>
    </div>

    <div class="field">
      <!-- <%= f.label :password, class: 'left' %> -->
      <!-- <% if @minimum_password_length %>
      <p class='right' id='passwordHelpText'>(<%= @minimum_password_length %> characters minimum)</p>
      <% end %><br /> -->
      <%= f.password_field :password,
        autocomplete: "off",
        placeholder: 'Password',
        'aria-describedby' => 'passwordHelpText'
      %>
    </div>

    <div class="field">
      <!-- <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'button' %>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
</div>
